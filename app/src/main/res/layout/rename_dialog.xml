<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/renamedialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_renamebackground"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_24sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_gravity="center"
    android:paddingTop="@dimen/_16sdp"
    android:paddingRight="@dimen/_24sdp"
    android:paddingBottom="@dimen/_14sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/itc_avant_garde_std_md"
        android:gravity="center"
        android:text="@string/rename_file"
        android:textSize="@dimen/_19sdp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/new_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_24sdp"

        android:textColor="@color/white"

        android:paddingVertical="@dimen/_10sdp"
        android:background="#8981B6"
        android:textSize="@dimen/_15ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnok"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/save_btn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btncancel"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/cancel_btn" />
    </LinearLayout>

</LinearLayout>